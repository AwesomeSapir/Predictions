<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="viewDetails" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.component.custom.detail.DetailView">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
    <Label fx:id="labelTitle" text="Select an item to display." />
    <Separator VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="-16.0" right="-16.0" />
      </VBox.margin></Separator>

    <GridPane fx:id="gridData" hgap="8.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
    </GridPane>

</VBox>
