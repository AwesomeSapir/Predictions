<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="viewDetails" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.component.custom.detail.DetailView">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
    <Label fx:id="labelTitle" text="Object" />
    <Separator fx:id="separator" VBox.vgrow="ALWAYS" />

    <GridPane fx:id="gridName" hgap="8.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Name" GridPane.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelName" text="Name Value" GridPane.columnIndex="1" />
    </GridPane>

    <GridPane fx:id="gridEntity" alignment="CENTER" hgap="8.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Properties" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelEntityProperties" text="Properties Value" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    </GridPane>

    <GridPane fx:id="gridProperty" hgap="8.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Type" GridPane.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelPropertyType" text="Type Value" GridPane.columnIndex="1" />
        <Label text="Range" GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelPropertyRange" text="Range Value" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Random?" GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelPropertyRandom" text="Random Value" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

    <GridPane fx:id="gridRule" hgap="8.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Ticks" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelRuleTicks" text="Ticks Value" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Probability" GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelRuleProbability" text="Probability Value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Actions" GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelRuleActions" text="Actions Value" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    </GridPane>

    <GridPane fx:id="gridTermination" hgap="8.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Ticks" GridPane.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelTerminationTicks" text="Ticks Value" GridPane.columnIndex="1" />

        <Label text="Seconds" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="labelTerminationSeconds" text="Seconds Value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    </GridPane>

</VBox>
