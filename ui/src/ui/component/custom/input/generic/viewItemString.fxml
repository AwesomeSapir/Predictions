<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root hgap="8.0" type="javafx.scene.layout.GridPane" vgap="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <Label fx:id="labelTitle" text="Title" GridPane.valignment="CENTER">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="textField" promptText="Value" GridPane.columnSpan="3" GridPane.rowIndex="1" />
   <Label fx:id="labelError" text="Error" GridPane.columnSpan="3" GridPane.rowIndex="2" GridPane.valignment="TOP">
      <GridPane.margin>
         <Insets top="8.0" />
      </GridPane.margin>
   </Label>
    <Button fx:id="buttonRandom" styleClass="button-circle" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
        <graphic>
            <ImageView styleClass="icon-random" pickOnBounds="true" preserveRatio="true" />
        </graphic>
    </Button>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
</fx:root>
