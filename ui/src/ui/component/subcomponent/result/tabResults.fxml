<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ui.component.custom.node.*?>
<?import ui.component.custom.progress.*?>

<SplitPane dividerPositions="0.3" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.component.subcomponent.result.ResultsController">
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
        </padding>
        <ListView fx:id="listExecution">
            <placeholder>
                <Label text="No simulations were executed." />
            </placeholder>
        </ListView>
    </ScrollPane>
    <ScrollPane fx:id="paneDetails" fitToHeight="true" fitToWidth="true">
        <AnchorPane>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <AnchorPane>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                    </padding>
                    <VBox alignment="TOP_CENTER" spacing="8.0" styleClass="view-box" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <SimulationProgressView fx:id="gridSeconds" title="Seconds" />
                        <SimulationProgressView fx:id="gridTicks" title="Ticks" />
                        <GridPane hgap="8.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                            </rowConstraints>
                            <IconButton fx:id="buttonPrev" icon="icon-prev" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="0" />
                            <ToggleIconButton fx:id="buttonPlayPause" icon="icon-play" iconOff="icon-play" iconOn="icon-pause" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="1" />
                            <IconButton fx:id="buttonNext" icon="icon-next" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="2" />
                            <IconButton fx:id="buttonStop" icon="icon-stop" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="3" />
                            <IconButton fx:id="buttonBoard" icon="icon-map" mnemonicParsing="false" text="SHOW BOARD" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnSpan="3" />
                            <IconButton fx:id="buttonRerun" icon="icon-replay" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        </GridPane>
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                    </VBox>
                </AnchorPane>
                <AnchorPane>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                    </padding>
                    <TextArea fx:id="textResult" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </AnchorPane>
            </SplitPane>
        </AnchorPane>
    </ScrollPane>
</SplitPane>
