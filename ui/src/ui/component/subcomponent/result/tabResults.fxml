<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.component.subcomponent.result.ResultsController">
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
        </padding>
        <ListView fx:id="listExecution">
            <placeholder>
                <Label text="No simulations were executed." />
            </placeholder>
        </ListView>
    </ScrollPane>
    <ScrollPane fx:id="paneDetails" fitToHeight="true" fitToWidth="true">
        <AnchorPane>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
            </padding>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <VBox spacing="8.0">
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                    </padding>
                    <GridPane fx:id="gridSeconds" alignment="CENTER_LEFT" hgap="8.0">
                        <columnConstraints>
                            <ColumnConstraints fillWidth="false" hgrow="NEVER" percentWidth="25.0"/>
                            <ColumnConstraints fillWidth="false" hgrow="NEVER" percentWidth="15.0"/>
                            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                            <ColumnConstraints fillWidth="false" hgrow="NEVER" percentWidth="15.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Seconds:"/>
                        <ProgressBar fx:id="progressBarSeconds" maxWidth="1.7976931348623157E308" prefWidth="100.0"
                                     progress="0.0" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS"/>
                        <Label fx:id="labelSeconds" text="Label" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                        <Label fx:id="labelMaxSeconds" text="Label" GridPane.columnIndex="3"
                               GridPane.halignment="LEFT"/>
                    </GridPane>
                    <GridPane fx:id="gridTicks" alignment="CENTER_LEFT" hgap="8.0">
                        <columnConstraints>
                            <ColumnConstraints fillWidth="false" hgrow="NEVER" percentWidth="25.0"/>
                            <ColumnConstraints fillWidth="false" hgrow="NEVER" percentWidth="15.0"/>
                            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                            <ColumnConstraints fillWidth="false" hgrow="NEVER" percentWidth="15.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Ticks:"/>
                        <ProgressBar fx:id="progressBarTicks" maxWidth="1.7976931348623157E308" prefWidth="100.0"
                                     progress="0.0" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS"/>
                        <Label fx:id="labelTicks" text="Label" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                        <Label fx:id="labelMaxTicks" text="Label" GridPane.columnIndex="3" GridPane.halignment="LEFT"/>
                    </GridPane>
                    <GridPane hgap="8.0">
                        <columnConstraints>
                            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Button fx:id="buttonResume" mnemonicParsing="false" styleClass="button-circle">
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="icon-play"/>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonPause" mnemonicParsing="false" styleClass="button-circle"
                                GridPane.columnIndex="1">
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="icon-pause"/>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonStop" mnemonicParsing="false" styleClass="button-circle"
                                GridPane.columnIndex="2">
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="icon-stop"/>
                            </graphic>
                        </Button>
                    </GridPane>
                </VBox>
                <BorderPane>
                    <center>
                        <TextArea fx:id="textResult"/>
                    </center>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                    </padding>
                </BorderPane>
            </SplitPane>
        </AnchorPane>
    </ScrollPane>
</SplitPane>
