<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ui.component.custom.node.*?>
<?import ui.component.custom.progress.*?>

<SplitPane dividerPositions="0.3" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.component.subcomponent.result.ResultsController">
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
        </padding>
        <ListView fx:id="listExecution">
            <placeholder>
                <Label text="No simulations were executed." />
            </placeholder>
        </ListView>
    </ScrollPane>
    <ScrollPane fx:id="paneDetails" fitToHeight="true" fitToWidth="true">
        <AnchorPane>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                    </padding>
                    <VBox alignment="TOP_CENTER" spacing="8.0" styleClass="view-box">
                        <SimulationProgressView fx:id="gridSeconds" title="Seconds" />
                        <SimulationProgressView fx:id="gridTicks" title="Ticks" />
                        <GridPane hgap="8.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                            </rowConstraints>
                            <IconButton fx:id="buttonRerun" icon="icon-replay" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="0" />
                            <ToggleIconButton fx:id="buttonPlayPause" icon="icon-play" iconOff="icon-play" iconOn="icon-pause" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="1" />
                            <IconButton fx:id="buttonNext" icon="icon-next" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="2" />
                            <IconButton fx:id="buttonStop" icon="icon-stop" mnemonicParsing="false" styleClass="button-circle" GridPane.columnIndex="3" />
                            <IconButton fx:id="buttonBoard" icon="icon-map" mnemonicParsing="false" text="SHOW BOARD" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        </GridPane>
                        <TableView fx:id="entityTable" VBox.vgrow="SOMETIMES">
                            <columns>
                                <TableColumn fx:id="entityNameColumn" editable="false" text="Entity Name" />
                                <TableColumn fx:id="instanceCountColumn" editable="false" text="Quantity" />
                                <TableColumn fx:id="initialCountColumn" editable="false" text="Initial" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                    </VBox>
                </ScrollPane>
                <ScrollPane fx:id="paneResult" fitToHeight="true" fitToWidth="true">
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                    </padding>
                    <VBox alignment="TOP_CENTER" spacing="8.0" styleClass="view-box">
                        <GridPane hgap="8.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                            </rowConstraints>
                            <Label text="Status:" />
                            <Label text="Termination Reason:" GridPane.rowIndex="1" />

                            <Label fx:id="labelStatus" text="Running" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label fx:id="labelTermination" text="User" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        </GridPane>
                        <TabPane fx:id="simulationResultsMainTabPane" tabClosingPolicy="UNAVAILABLE">
                            <Tab fx:id="chartLineTab" text="Graph">
                                <LineChart fx:id="chartPopulationPerTick" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <xAxis>
                                        <NumberAxis label="Ticks" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Quantity" />
                                    </yAxis>
                                </LineChart>
                            </Tab>
                            <Tab fx:id="entityPropertyTab" text="Entity-Property">
                                <ScrollPane>
                                    <VBox alignment="TOP_CENTER">
                                        <HBox alignment="TOP_CENTER" fillHeight="false" spacing="8.0">
                                            <ComboBox fx:id="comboBoxEntity" promptText="Select an entity" />
                                            <ComboBox fx:id="comboBoxProperty" promptText="Select a property" />
                                            <ComboBox fx:id="comboBoxDisplayType" promptText="Select a display way" />
                                        </HBox>
                                        <!-- Placeholder for the property display type -->
                                        <VBox fx:id="vboxDisplayType" />
                                    </VBox>
                                </ScrollPane>
                            </Tab>
                        </TabPane>
                    </VBox>
                </ScrollPane>
            </SplitPane>
        </AnchorPane>
    </ScrollPane>
</SplitPane>
